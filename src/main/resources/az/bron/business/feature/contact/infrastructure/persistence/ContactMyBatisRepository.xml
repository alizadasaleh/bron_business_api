<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="az.bron.business.feature.contact.infrastructure.persistence.ContactMyBatisRepository">

    <resultMap id="BaseResultMap" type="az.bron.business.feature.contact.domain.model.Contact">
        <id property="id" column="contact_id" jdbcType="BIGINT"/>
        <result property="phoneNumber" column="phone_number" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="website" column="website" jdbcType="VARCHAR"/>
        <result property="schedule" column="schedule" typeHandler="az.bron.business.feature.contact.infrastructure.persistence.ScheduleTypeHandler"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="created" column="created" jdbcType="TIMESTAMP"/>
        <result property="modifiedBy" column="modified_by" jdbcType="VARCHAR"/>
        <result property="modified" column="modified" jdbcType="TIMESTAMP"/>
        <association property="address" javaType="az.bron.business.feature.address.domain.model.Address"
                     resultMap="addressMap"/>
    </resultMap>

    <resultMap id="addressMap" type="az.bron.business.feature.address.domain.model.Address"
               extends="az.bron.business.feature.address.infrastructure.persistence.AddressMyBatisRepository.BaseResultMap"/>


    <sql id="Base_Column_List">
        cnt.contact_id AS contact_id,
        cnt.address_id AS addressId,
        cnt.phone_number AS phoneNumber,
        cnt.email AS email,
        cnt.website AS website,
        cnt.created_by AS createdBy,
        cnt.created AS created,
        cnt.modified_by AS modifiedBy,
        cnt.modified AS modified,
        adr.address_id AS address_id,
        adr.street AS street,
        adr.city AS city,
        adr.state AS state,
        adr.postal_code AS postalCode,
        adr.longitude AS longitude,
        adr.latitude AS latitude,
        adr.created_by AS createdBy,
        adr.created AS created,
        adr.modified_by AS modifiedBy,
        adr.modified AS modified
    </sql>

    <select id="get" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from public.contact cnt
        left join public.address adr
        on cnt.address_id = adr.address_id
        where  cnt.contact_id = #{id,jdbcType=BIGINT}
    </select>

    <select id="getAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from public.contact cnt
        left join public.address adr
        on cnt.address_id = adr.address_id
    </select>

    <delete id="delete" parameterType="java.lang.Long">
        delete from public.contact        where  contact_id = #{id,jdbcType=BIGINT}
    </delete>
    <insert id="add" keyColumn="contact_id" keyProperty="id" parameterType="az.bron.business.feature.contact.domain.model.Contact" useGeneratedKeys="true">
        insert into public.contact
        ( address_id,phone_number
        ,email,website,schedule
        ,created_by,created,modified_by
        ,modified)
        values (#{address.id,jdbcType=INTEGER},#{phoneNumber,jdbcType=VARCHAR}
               ,#{email,jdbcType=VARCHAR},#{website,jdbcType=VARCHAR},#{schedule,typeHandler=az.bron.business.feature.contact.infrastructure.persistence.ScheduleTypeHandler}::jsonb
               ,#{createdBy,jdbcType=VARCHAR},#{created,jdbcType=TIMESTAMP},#{modifiedBy,jdbcType=VARCHAR}
               ,#{modified,jdbcType=TIMESTAMP})
    </insert>
    <update id="update" parameterType="az.bron.business.feature.contact.domain.model.Contact">
        update contact
        set
            address_id =  #{address.id,jdbcType=INTEGER},
            phone_number =  #{phoneNumber,jdbcType=VARCHAR},
            email =  #{email,jdbcType=VARCHAR},
            website =  #{website,jdbcType=VARCHAR},
            schedule =  #{schedule,typeHandler=az.bron.business.feature.contact.infrastructure.persistence.ScheduleTypeHandler}::jsonb,
            created_by =  #{createdBy,jdbcType=VARCHAR},
            created =  #{created,jdbcType=TIMESTAMP},
            modified_by =  #{modifiedBy,jdbcType=VARCHAR},
            modified =  #{modified,jdbcType=TIMESTAMP}
        where   contact_id = #{id,jdbcType=BIGINT}
    </update>
</mapper>
